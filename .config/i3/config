# i3 config file (v4)
#
# Please see https://i3wm.org/docs/userguide.html for a complete reference!

# Set screensaver to 10 minutes (xss-lock will start lock)
exec --no-startup-id xset s 600
# Setup system to lock when suspended/screensaver
exec --no-startup-id exec xss-lock -- slock
bindsym $mod+F1 exec alacritty -e 'vifm'
bindsym $mod+Shift+BackSpace move scratchpad
bindsym $mod+Tab scratchpad show
bindsym $mod+F9 exec alacritty -e 'pulsemixer'
set $mod Mod4
set $mod_alt Mod1
# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below.
font pango:Iosevka Nerd Font Mono 18

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# start a terminal
bindsym $mod+Return exec alacritty
# kill focused window
bindsym $mod+Shift+q kill
bindsym $mod+Shift+p exec --no-startup-id rofi -show drun
# change focus
bindsym $mod+j focus left
bindsym $mod+k focus down
bindsym $mod+l focus up
bindsym $mod+odiaeresis focus right

bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right
# move focused window
bindsym $mod+Shift+j move left
bindsym $mod+Shift+k move down
bindsym $mod+Shift+l move up
bindsym $mod+Shift+odiaeresis move right
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right
bindsym $mod+y move workspace to output right
# Split horizontal/vertical
bindsym $mod+h split h
bindsym $mod+v split v
bindsym $mod+f fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+Shift+s layout stacking
bindsym $mod+Shift+w layout tabbed
bindsym $mod+Shift+e layout toggle split

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# focus the parent container
bindsym $mod+a focus parent

# focus the child container
#bindsym $mod+c focus child

set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"

# switch to workspace
bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8
bindsym $mod+9 workspace $ws9

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6
bindsym $mod+Shift+7 move container to workspace $ws7
bindsym $mod+Shift+8 move container to workspace $ws8
bindsym $mod+Shift+9 move container to workspace $ws9

# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart
bindsym $mod+e exec emacsclient -nc
# resize window (you can also use the mouse for that)
mode "resize" {
        bindsym j resize shrink width 10 px or 10 ppt
        bindsym k resize grow height 10 px or 10 ppt
        bindsym l resize shrink height 10 px or 10 ppt
        bindsym odiaeresis resize grow width 10 px or 10 ppt
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}

bindsym $mod+r mode "resize"

set $mode_lock (l)ock (r)eboot (p)oweroff
bindsym $mod+0 mode "$mode_lock"

mode "$mode_lock" {
        bindsym l exec --no-startup-id xset s activate; mode "default"
        bindsym r exec --no-startup-id sudo reboot
        bindsym p exec --no-startup-id sudo poweroff
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

set $mode_brightness_display_audio brig(h)tness down (j)am down (k)rank it up en(l)ighten me (m)ute audio m(i)c toggle
bindsym $mod_alt+p mode "$mode_brightness_display_audio"

mode "$mode_brightness_display_audio" {

    # audio
    bindsym k    exec --no-startup-id sh soundctl up
    bindsym j    exec --no-startup-id sh soundctl down
    bindsym m    exec --no-startup-id sh soundctl mute

    #brightness
    bindsym l     exec --no-startup-id sh blightctl up
    bindsym h     exec --no-startup-id sh blightctl down

    # mic
    bindsym i        exec --no-startup-id    amixer set Capture toggle
    bindsym Return                                           mode "default"
    bindsym Escape                                           mode "default"
}
# audio
bindsym XF86AudioRaiseVolume    exec --no-startup-id sh soundctl up
bindsym XF86AudioLowerVolume    exec --no-startup-id sh soundctl down
bindsym XF86AudioMute           exec --no-startup-id sh soundctl mute

#brightness
bindsym XF86MonBrightnessUp     exec --no-startup-id sh blightctl up
bindsym XF86MonBrightnessDown   exec --no-startup-id sh blightctl down

# screenshot
bindsym Print                   exec                    flameshot gui -p ~/shots

# mic
bindsym XF86AudioMicMute        exec --no-startup-id    amixer set Capture toggle


# gaps
for_window [class="^.*"] border pixel 2
smart_gaps on
smart_borders on
gaps inner 10

# Window colors         border  backgr. text    indicator
client.focused          #f1f1f0 #285577 #ffffff #2e9ef4
client.focused_inactive #282a36 #5f676a #ffffff #484e50
client.unfocused        #282a36 #222222 #888888 #292d2e
client.urgent           #ff5c57 #900000 #ffffff #900000


# ws9 ist chat oberfläche
assign [class="Telegram"] $ws9
assign [class="Signal"] $ws9
assign [class="scrcpy"] $ws4
# ws3 ist inet oberfläche
assign [class="Firefox"] $ws3
for_window [class="ffplay"] floating enable
for_window [class="scrcpy"] floating enable
for_window [class="Alacritty"] $ws2
for_window [title="pulsemixer"] floating enable
for_window [class="ffplay"] move position 0 0
# ws4 ist Arbeitsoberfläche
assign [class="Joplin"] $ws4
assign [class="Emacs"] $ws4
assign [class="jetbrains-studio"] $ws4


exec_always --no-startup-id xcompmgr
exec_always --no-startup-id ~/.local/bin/autotiling
exec_always --no-startup-id feh --bg-fill --randomize ~/.wallpaper
exec_always --no-startup-id $HOME/.config/polybar/launch.sh
exec_always --no-startup-id flameshot

exec --no-startup-id dunst --config $HOME/.config/dunst/dunstrc
exec --no-startup-id keepassxc
exec --no-startup-id alacritty
exec --no-sec/pam_kwallet_init
exec --no-startup-id nextcloud
exec --no-startup-id nm-applet
