#################################################################################

[module/emerge]
type = custom/script
exec = tail -n1 /var/log/emerge.log 
label-foreground = ${colors.alert}
label = %output%
tail = true

#################################################################################

[module/airquality-index]
type = custom/script
exec = aqi
label = %output%
interval = 600

[module/hackspeed]
type = custom/script
exec = hackspeed
tail = true

[module/pingrtt]
type = custom/script
exec = pingrtt
label = %output%
interval = 600

[module/dummy]
type = custom/script
exec = echo " "
label = %output%
interval = 600
