font-2              = Symbola:pixelsize=12;1
font-3              = Font Awesome 5 Free Solid:pixelsize=10;1
radius              = 10.0

separator           = " | "
padding-left        = 2
padding-right       = 2
module-margin       = 1
modules-left        = temperature fcpu memory
modules-center      = pingrtt pbweather airquality-index 
modules-right       = date fbattery

[bar/bottom]
wm-restack          = i3
fixed-center        = true
height              = 25
tray-position       = right
