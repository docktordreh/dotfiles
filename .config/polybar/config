[bar/top]
inherit             = bar/base
top                 = true
modules-left        = temperature cpu memory pingrtt
modules-center      = bspwm
modules-right       = pbweather airquality-index fbattery

[bar/bottom]
inherit             = bar/base
tray-position       = right
bottom              = true
modules-left        = eth fwlan
modules-center      = date
modules-right       = powermenu

[bar/systray]
width = 1

# Whatever fits your needs
height = 40

# Bottom left to imitate gnome-shells systray
bottom = true

# REQUIRED for us to be able to move the window
override-redirect = true

modules-right = powermenu volume

tray-position = left
tray-maxsize = 16
tray-padding = 8
tray-transparent = false
tray-background = #282C34