ramp-1                = 
ramp-2                = 
ramp-3                = 
ramp-4                = 
format                = <ramp> <label>


#################################################################################

[date]
type               = internal/date
date               = "%d.%m.%Y"
time               = "%H:%M:%S"

[module/date]
type               = ${date.type}
date               = ${date.date}
time               = ${date.time}

format-prefix = " "
format-foreground = #B53471
label = %date% [%time%]

#################################################################################

[module/pbweather]
type               = custom/script
tail               = true
label              = %output%
label-foreground   = #aaff77
interval           = 3000
exec               = pbweather

#################################################################################

[module/i3]
type                       = internal/i3
