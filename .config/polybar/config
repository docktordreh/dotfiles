#################################################################################

[memory]
type                          = internal/memory
format-prefix                 = " RAM Usage: "
format-foreground             = #aaff77
label                         = %percentage_used%%

[module/memory]
type                          = ${memory.type}
format-prefix                 = ${memory.format-prefix}
format-foreground             = ${memory.format-foreground}

[module/fmemory]
type                          = ${memory.type}
format                        = <label> <bar-used>
format-prefix                 = ${memory.format-prefix}
format-foreground             = ${memory.format-foreground}

bar-used-width                = 10
bar-used-foreground-0         = #aaff77
bar-used-foreground-1         = #aaff77
bar-used-foreground-2         = #fba922
bar-used-foreground-3         = #ff5555
bar-used-empty-foreground     = #aaff77

bar-used-indicator            = ""
bar-used-fill                 = ""
bar-used-empty                = "-"

#################################################################################

[cpu]
type                  = internal/cpu
format-prefix         = " CPU Usage: "
format-foreground     = #f1c40f
label                 = %percentage%%

[module/cpu]
type                  = ${cpu.type}

format-prefix         = ${cpu.format-prefix}
format-foreground     = ${cpu.format-foreground}
label                 = ${cpu.label}

[module/fcpu]
type                  = ${cpu.type}
format                = <label> <ramp-coreload>
format-prefix         = ${cpu.format-prefix}
format-foreground     = ${cpu.format-foreground}
label                 = ${cpu.label}

ramp-coreload-spacing = 1
ramp-coreload-0       = ▁
ramp-coreload-1       = ▂
ramp-coreload-2       = ▃
ramp-coreload-3       = ▄
ramp-coreload-4       = ▅
ramp-coreload-5       = ▆
ramp-coreload-6       = ▇
ramp-coreload-7       = █

#################################################################################

[wlan]
type                           = internal/network
interface                      = wlp4s0
format-prefix                  = " "
format-foreground              = #9b5bbb
label-disconnected             = "OFF THE GRID"

[module/wlan]
type                           = ${wlan.type}
interface                      = ${wlan.interface}

format-connected-prefix        = ${wlan.format-prefix}
format-connected-foreground    = ${wlan.format-foreground}
label-connected                = %essid% [%local_ip%]

format-disconnected-prefix     = ${wlan.format-prefix}
format-disconnected-foreground = ${wlan.format-foreground}
label-disconnected             = ${wlan.label-disconnected}

[module/fwlan]
type                           = ${wlan.type}
interface                      = ${wlan.interface}

format-connected-prefix        = ${wlan.format-prefix}
format-connected-foreground    = ${wlan.format-foreground}
label-connected                = %essid% IP: %local_ip% |  %upspeed% |  %downspeed%

format-disconnected-prefix     = ${wlan.format-prefix}
format-disconnected-foreground = ${wlan.format-foreground}
label-disconnected             = ${wlan.label-disconnected}

#################################################################################

[module/eth]
type = internal/network
interface = enp0s25

format-connected-prefix = ""
format-connected-prefix-foreground = ${colors.foreground}
label-connected = ETH | %local-ip%

format-disconnected =
;format-disconnected = <label-disconnected>
;label-disconnected = %ifname% disconnected
;label-disconnected-foreground = ${colors.foreground}

#################################################################################

[battery]
type                          = internal/battery
battery                       = BAT0
adapter                       = AC
full-at                       = 100
format-foreground             = #e74c3c

[module/battery]
type                          = ${battery.type}
battery                       = ${battery.battery}
adapter                       = ${battery.adapter}
full-at                       = ${battery.full-at}

format-charging               = <animation-charging> <label-charging>
format-charging-foreground    = ${battery.format-foreground}
format-discharging            = <animation-discharging> <label-discharging>
format-discharging-foreground = ${battery.format-foreground}
format-full-prefix            = "FULLY CHARGED!"

animation-charging-0          = "[] "
animation-charging-1          = "[] "
animation-charging-2          = "[] "
animation-charging-3          = "[] "
animation-charging-4          = "[] "

animation-discharging-0       = ""
animation-discharging-1       = ""
animation-discharging-2       = ""
animation-discharging-3       = ""
animation-discharging-4       = ""

[module/fbattery]
type                          = ${battery.type}
battery                       = ${battery.battery}
adapter                       = ${battery.adapter}
full-at                       = ${battery.full-at}

format-charging               = <animation-charging> <label-charging>
format-charging-foreground    = ${battery.format-foreground}
format-discharging            = <animation-discharging> <label-discharging>
format-discharging-foreground = ${battery.format-foreground}
format-full-prefix            = "FULLY CHARGED!"
label-discharging             = %percentage%% [%consumption%W] [%time%]

ramp-capacity-0               = ""
ramp-capacity-1               = ""
ramp-capacity-2               = ""
ramp-capacity-3               = ""
ramp-capacity-4               = ""

animation-charging-0          = "[] "
animation-charging-1          = "[] "
animation-charging-2          = "[] "
animation-charging-3          = "[] "
animation-charging-4          = "[] "

animation-discharging-0       = ""
animation-discharging-1       = ""
animation-discharging-2       = ""
animation-discharging-3       = ""
animation-discharging-4       = ""

