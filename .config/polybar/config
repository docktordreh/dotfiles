ws-icon-7                  = Aufgaben;華
ws-icon-8                  = Music;
ws-icon-9                  = 999;
ws-icon-default            = 

label-mode                 = %mode%
label-mode-padding         = 4
label-mode-background      = ${colors.background}
label-mode-foreground      = ${colors.primary}

label-focused              = %icon% %name%
